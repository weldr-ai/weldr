{
  "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "apps/**",
      "packages/**",
      "!**/.next/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.nitro/**",
      "!**/.turbo/**",
      "!**/temp/**",
      "!**/.temp/**",
      "!**/data/**",
      "!**/integrations/base/**",
      "!**/build/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":BUN:",
              ":NODE:",
              ["**", "!@weldr/**", "!./**", "!../**"],
              ":BLANK_LINE:",
              ["@weldr/**"],
              ["./", "../", "/**"]
            ]
          }
        }
      }
    }
  },
  "linter": {
    "domains": {
      "react": "recommended",
      "next": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": "info",
      "correctness": {
        "useExhaustiveDependencies": "info",
        "useHookAtTopLevel": "info"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      }
    }
  }
}
