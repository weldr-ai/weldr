{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": [
      "**/.next/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/.nitro/**",
      "**/.turbo/**"
    ]
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": [
      "**/.next/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/.nitro/**",
      "**/.turbo/**"
    ]
  },
  "linter": {
    "rules": {
      "recommended": true
    },
    "ignore": [
      "**/.next/**",
      "**/dist/**",
      "**/node_modules/**",
      "**/.nitro/**",
      "**/.turbo/**"
    ]
  }
}
