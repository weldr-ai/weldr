{
  "name": "weldr-monorepo",
  "private": true,
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "turbo build",
    "check-types": "turbo check-types",
    "clean": "rm -rf .turbo node_modules",
    "clean:ws": "turbo clean",
    "commit": "git-cz",
    "db:check": "pnpm -F @weldr/db check",
    "db:generate": "pnpm -F @weldr/db generate",
    "db:migrate": "pnpm -F @weldr/db migrate",
    "db:migrate:drop": "pnpm -F @weldr/db migrate:drop",
    "db:pull": "pnpm -F @weldr/db pull",
    "db:push": "pnpm -F @weldr/db push",
    "db:studio": "pnpm -F @weldr/db studio",
    "db:seed": "pnpm -F @weldr/db seed",
    "db:up": "pnpm -F @weldr/db up",
    "dev": "turbo dev",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "lint:staged": "lint-staged",
    "publish-packages": "changeset version && changeset publish",
    "start": "turbo start",
    "preview": "turbo preview"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@turbo/gen": "^1.13.3",
    "@weldr/tsconfig": "workspace:*",
    "commitizen": "^4.3.0",
    "husky": "^9.0.11",
    "inquirer": "^9.2.22",
    "lint-staged": "^15.2.5",
    "turbo": "^2.5.0",
    "typescript": "^5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
