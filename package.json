{
  "name": "integramind-monorepo",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo build",
    "clean": "rm -rf .turbo node_modules",
    "clean:ws": "turbo clean",
    "commit": "git-cz",
    "db:check": "pnpm -F @integramind/db check",
    "db:generate": "pnpm -F @integramind/db generate",
    "db:migrate": "pnpm -F @integramind/db migrate",
    "db:migrate:drop": "pnpm -F @integramind/db migrate:drop",
    "db:pull": "pnpm -F @integramind/db pull",
    "db:push": "pnpm -F @integramind/db push",
    "db:studio": "pnpm -F @integramind/db studio",
    "db:up": "pnpm -F @integramind/db up",
    "dev": "turbo dev --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "lint:staged": "lint-staged",
    "postinstall": "pnpm lint:ws",
    "publish-packages": "changeset version && changeset publish",
    "check-types": "turbo check-types"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@integramind/eslint-config": "workspace:*",
    "@integramind/prettier-config": "workspace:*",
    "@integramind/tsconfig": "workspace:*",
    "@turbo/gen": "^1.13.3",
    "@typescript-eslint/parser": "^7.11.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "inquirer": "^9.2.22",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "prettier": "@integramind/prettier-config",
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  }
}
