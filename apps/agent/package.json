{
  "name": "@weldr/agent",
  "type": "module",
  "scripts": {
    "dev": "rm -rf .weldr && pnpm with-env tsx watch src/index.ts",
    "build": "esbuild src/index.ts --bundle --minify --platform=node --target=node20 --outfile=dist/index.js",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.19",
    "@ai-sdk/openai": "^1.3.22",
    "@aws-sdk/client-s3": "^3.799.0",
    "@aws-sdk/lib-storage": "^3.799.0",
    "@aws-sdk/s3-request-presigner": "^3.799.0",
    "@hono/node-server": "^1.14.4",
    "@hono/zod-openapi": "^0.19.8",
    "@weldr/auth": "workspace:*",
    "@weldr/db": "workspace:*",
    "@weldr/shared": "workspace:*",
    "ai": "^4.3.16",
    "hono": "^4.7.11",
    "hono-pino": "^0.8.0",
    "pino": "^9.7.0",
    "playwright": "^1.52.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "dotenv-cli": "^7.4.4",
    "esbuild": "^0.24.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}
