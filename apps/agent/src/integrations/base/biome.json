{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "apps/**",
      "packages/**",
      "!**/build/**",
      "!**/routeTree.gen.ts",
      "!.tanstack/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/.turbo/**",
      "!**/.output/**",
      "!**/.nitro/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":BUN:",
              ":NODE:",
              ["**", "!@repo/**", "!./**", "!../**", "!@/**"],
              ":BLANK_LINE:",
              ["@repo/**"],
              ":BLANK_LINE:",
              ["./", "../", "/**", "@/**"]
            ]
          }
        }
      }
    }
  },
  "linter": {
    "domains": {
      "react": "recommended"
    },
    "rules": {
      "recommended": true,
      "a11y": "info",
      "correctness": {
        "useExhaustiveDependencies": "info",
        "useHookAtTopLevel": "info"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "functions": ["clsx", "cva", "cn"]
          }
        }
      }
    }
  }
}
