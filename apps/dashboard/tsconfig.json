{
  "extends": "@specly/tsconfig/base.json",
  "compilerOptions": {
    "traceResolution": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "esnext"
  },
  "include": [".", ".next/types/**/*.ts", "../../packages/auth/src/templates"],
  "exclude": ["node_modules"]
}
