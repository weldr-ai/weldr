{
  "extends": "@integramind/tsconfig/base.json",
  "compilerOptions": {
    "traceResolution": true,
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@integramind/integrations-postgres": [
        "../../packages/integrations/postgres/src"
      ]
    },
    "plugins": [{ "name": "next" }],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "ESNext"
  },
  "include": [
    ".",
    ".next/types/**/*.ts",
    "../../packages/ui/src/icons/google-icon.tsx"
  ],
  "exclude": ["node_modules"]
}
