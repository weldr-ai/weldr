                      },
                      "formItemId": {
                        "type": "string",
                        "description": "ID for the form item element"
                      },
                      "formDescriptionId": {
                        "type": "string",
                        "description": "ID for the form description element"
                      },
                      "formMessageId": {
                        "type": "string",
                        "description": "ID for the form message element"
                      },
                      "error": {
                        "type": "object",
                        "description": "Error object if validation fails"
                      }
                    }
                  }
                }
              }
            }
          }
