      "metadata": {
        "definition": {
          "name": "useFormField",
          "description": "A custom hook that provides access to the form field context and state. It returns the field's ID, validation state, and accessibility IDs for various form components.",
          "signature": "function useFormField(): { id: string; name: string; formItemId: string; formDescriptionId: string; formMessageId: string; error?: FieldError }",
          "subtype": "rpc",
          "summary": "Hook to access form field context and state",
          "throws": [
            {
              "type": "Error",
              "description": "Thrown when the hook is used outside of a FormField component"
            }
          ],
          "responses": {
            "200": {
              "description": "Returns an object containing form field context and state",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "id": {
