          "examples": [
            "<FormField\n  name=\"email\"\n  control={form.control}\n  render={({ field }) => (\n    <FormItem>\n      <FormLabel>Email</FormLabel>\n      <FormControl>\n        <input {...field} />\n      </FormControl>\n    </FormItem>\n  )}\n/>"
