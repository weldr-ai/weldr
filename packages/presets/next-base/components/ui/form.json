      ],
      "metadata": {
        "definition": {
          "name": "Form",
          "description": "A wrapper component that provides form context using react-hook-form's FormProvider. It enables form state management and validation throughout the form component tree.",
          "subtype": "reusable",
          "rendersOn": "client",
          "properties": {
            "type": "object",
            "description": "Accepts all props from react-hook-form's FormProvider"
          },
          "examples": [
            "<Form {...form}>\n  <FormField name=\"username\" />\n  <FormField name=\"password\" />\n</Form>"
          ]
        },
        "type": "component"
      }
    },
