{
  "name": "@integramind/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "check": "pnpm with-env drizzle-kit check:pg --config src/config.ts",
    "generate": "pnpm with-env drizzle-kit generate:pg --config src/config.ts",
    "migrate": "pnpm with-env tsx src/migrate.ts --config src/config.ts",
    "migrate:drop": "pnpm with-env drizzle-kit drop --config src/config.ts",
    "pull": "pnpm with-env drizzle-kit introspect:pg --config src/config.ts",
    "push": "pnpm with-env drizzle-kit push:pg --config src/config.ts",
    "studio": "pnpm with-env drizzle-kit studio --config src/config.ts",
    "up": "pnpm with-env drizzle-kit up:pg --config src/config.ts",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "next-auth": "5.0.0-beta.18",
    "postgres": "^3.4.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@integramind/eslint-config": "workspace:*",
    "@integramind/prettier-config": "workspace:*",
    "@integramind/tsconfig": "workspace:*",
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.11.0"
  },
  "peerDependencies": {
    "next-auth": "5.0.0-beta.18"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@integramind/eslint-config/base"
    ]
  },
  "prettier": "@integramind/prettier-config"
}
