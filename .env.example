# Database
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/weldr

# Redis
# Redis connection URL (required for streaming functionality)
REDIS_URL=redis://localhost:6379

# Authentication
# Secret key for Better Auth (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-secret-key-here
# Base URL for authentication
BETTER_AUTH_URL=http://localhost:3000

# AI Providers (at least one required)
# Anthropic API key for Claude models
ANTHROPIC_API_KEY=your-anthropic-key
# OpenAI API key for GPT models and embeddings
OPENAI_API_KEY=your-openai-key
# Google Gemini API key for Gemini models
GEMINI_API_KEY=your-gemini-key

# Agent URL
# Base URL of the agent server
AGENT_URL=http://localhost:8080

# Optional: Local mode settings
# Deployment mode: "local" or "cloud" (defaults to local if unset)
WELDR_MODE=local
# Node environment
NODE_ENV=development

# Optional: Cloud Mode Only (required when WELDR_MODE=cloud)
# Tigris access key ID (project-specific credentials for bucket operations)
# S3_ACCESS_KEY_ID=your-s3-access-key-id
# Tigris secret access key (project-specific credentials for bucket operations)
# S3_SECRET_ACCESS_KEY=your-s3-secret-access-key
# S3 endpoint URL (defaults to https://fly.storage.tigris.dev in cloud mode)
# S3_ENDPOINT=https://fly.storage.tigris.dev
# Project ID for cloud mode
# PROJECT_ID=your-project-id
# S3 region (default: auto)
# S3_REGION=auto

# Optional: Agent Server Settings
# Agent server port (default: 8080)
# PORT=8080
# CORS allowed origins, comma-separated (default: http://localhost:3000)
# CORS_ORIGIN=http://localhost:3000

# Optional: Web Application Settings
# Public URL of the web application
# NEXT_PUBLIC_APP_URL=http://localhost:3000
# Web server port (default: 3000)
# PORT=3000

# Optional: Fly.io Settings (for cloud deployments)
# Fly.io API token
# FLY_API_TOKEN=your-fly-api-token
# Fly.io API hostname
# FLY_API_HOSTNAME=api.machines.dev
# Fly.io organization slug
# FLY_ORG_SLUG=your-org-slug
